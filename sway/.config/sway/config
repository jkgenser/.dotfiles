# ~/.config/sway/config
set $mod Mod4
font pango:monospace 8

# Autostart
exec --no-startup-id dex-autostart --autostart --environment sway


# idle tool
exec --no-startup-id swayidle -w \
  timeout 300 'swaylock -f -c 000000' \
  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f -c 000000'


# waybar
exec --no-startup-id waybar

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Launcher
bindsym $mod+d exec --no-startup-id wofi --show drun

# Terminal / window mgmt (unchanged)
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+q kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
floating_modifier $mod
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Workspaces (unchanged)
set $ws1 "1"
# … your $ws2–$ws10 …
bindsym $mod+1 workspace number $ws1
# … etc …
bindsym $mod+Shift+1 move container to workspace number $ws1
# … etc …

# Volume keys (works with PipeWire via PulseAudio compat)
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Scratchpad (unchanged)
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Outputs (Wayland)
# Find the real name first: `swaymsg -t get_outputs`
output DisplayPort-0 {
  mode 5120x1440@120Hz
  position 0 0
  scale 1
  # optional:
  adaptive_sync on
}

# Keyboard / pointer (Wayland)
input "*" {
  xkb_layout us
  xkb_options caps:swapescape
}
# Example pointer tuning:
# input "pointer:Logitech USB Receiver" { accel_profile flat; pointer_accel -0.5; }


# Make Caps Lock act as an extra Control key (Wayland/XKB, replaces xmodmap)
input "type:keyboard" {
  xkb_options ctrl:nocaps
}

# Mouse tuning (Wayland/libinput)
input "type:pointer" {
  pointer_accel -0.6            # like "libinput Accel Speed" -0.6
  natural_scroll enabled         # like "Natural Scrolling Enabled" 1
  scroll_method on_button_down   # like "Scroll Method Enabled" ... 1 (button scrolling)
  scroll_button BTN_MIDDLE       # pick the button used for button-scrolling (2 = middle)
  # accel_profile flat           # optional: if you want no adaptive accel curve
}
